[flake8]
max-line-length = 88  # Same as Black
extend-ignore = E203  # See https://github.com/PyCQA/pycodestyle/issues/373
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # Ignore missing docstrings in tests
    tests/*:D100,D101,D102,D103
docstring-convention = google  # Use Google-style docstrings